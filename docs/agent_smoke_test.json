{
  "flow_id": "agent_smoke_test",
  "meta": {
    "flow_id": "agent_smoke_test",
    "name": "Agent Smoke Test (Simulador)",
    "locales": ["es"],
    "start_node": "start1"
  },
  "nodes": {
    "start1": {
      "id": "start1",
      "type": "start",
      "next": { "node_id": "agent1" }
    },
    "agent1": {
      "id": "agent1",
      "type": "agent_call",
      "props": {
        "agent_profile": "normal",
        "message": "Hola agente, responde 'pong' si estás operativo.",
        "stream": false,
        "save_as": "r1",
        "model": {
          "provider": "azure-openai",
          "temperature": 0.2,
          "max_tokens": 300
        },
        "system_prompt": "Responde únicamente con la palabra: pong"
      },
      "next": { "node_id": "resp1" }
    },
    "resp1": {
      "id": "resp1",
      "type": "response",
      "text": "El agente respondió: ${r1.text}"
    }
  }
}
